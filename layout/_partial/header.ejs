<header class="header">
    <nav class="nav">
        <div class="logo">
            <a href="<%= url_for('/') %>" accesskey="h" title="<%= config.title %> (<%= __('accessibility.home') %>)">
                <% if (theme.logo) { %>
                    <img src="<%= url_for(theme.logo) %>" alt="<%= config.title %>" />
                <% } else { %>
                    <%= config.title %>
                <% } %>
            </a>
            <div class="logo-switches">
                <% if (theme.features.darkmode) { %>
                <button id="theme-toggle" accesskey="t" title="<%= __('accessibility.theme_toggle') %>">
                    <svg id="moon" xmlns="http://www.w3.org/2000/svg" width="24" height="18" viewBox="0 0 24 24"
                        fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                        stroke-linejoin="round">
                        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
                    </svg>
                    <svg id="sun" xmlns="http://www.w3.org/2000/svg" width="24" height="18" viewBox="0 0 24 24"
                        fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                        stroke-linejoin="round">
                        <circle cx="12" cy="12" r="5"></circle>
                        <line x1="12" y1="1" x2="12" y2="3"></line>
                        <line x1="12" y1="21" x2="12" y2="23"></line>
                        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
                        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
                        <line x1="1" y1="12" x2="3" y2="12"></line>
                        <line x1="21" y1="12" x2="23" y2="12"></line>
                        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
                        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
                    </svg>
                </button>
                <% } %>
                
                <% if (site.data.i18n) { %>
                <ul class="lang-switch">
                    <% Object.keys(site.data.i18n).forEach(function(lang) { %>
                        <li>
                            <a href="<%= url_for(lang === config.language ? '/' : '/' + lang + '/') %>" title="<%= site.data.i18n[lang].name %>">
                                <%= lang.toUpperCase() %>
                            </a>
                        </li>
                    <% }); %>
                </ul>
                <% } %>
            </div>
        </div>
        <ul id="menu">
            <% for (let key in theme.menu) { %>
                <li>
                    <a href="<%= url_for(theme.menu[key]) %>" title="<%= key %>">
                        <span><%= key %></span>
                    </a>
                </li>
            <% } %>
        </ul>
    </nav>
</header>
